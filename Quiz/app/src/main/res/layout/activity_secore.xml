<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6A2377">

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/circularProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="102dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="385dp"

        app:cpb_background_progressbar_color="#FF0707"
        app:cpb_background_progressbar_width="10dp"
        app:cpb_progress_direction="to_right"
        app:cpb_progressbar_color="#3f51b5"
        app:cpb_progressbar_width="10dp"
        app:cpb_round_border="false" />

    <TextView
        android:id="@+id/textScore"
        android:layout_width="97dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/circularProgressBar"
        android:layout_alignTop="@+id/circularProgressBar"
        android:layout_alignEnd="@+id/circularProgressBar"
        android:layout_alignBottom="@+id/circularProgressBar"
        android:layout_marginStart="67dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="67dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="132dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="387dp"
        android:fontFamily="@font/aclonica"
        android:text="Score"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="178dp"
        android:layout_height="42dp"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_marginEnd="-47dp"
        android:layout_marginBottom="-58dp"
        android:fontFamily="@font/aclonica"
        android:text="Reponse Correctes"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="182dp"
        android:layout_height="46dp"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_marginEnd="-6dp"
        android:layout_marginBottom="-54dp"
        android:fontFamily="@font/aclonica"
        android:text="Reponses Incorrectes"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/scor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_marginTop="389dp"
        android:layout_marginEnd="-186dp"
        android:layout_marginBottom="-7dp"
        android:fontFamily="@font/aclonica"
        android:text="TextView"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/repCorrect"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/scor"
        android:layout_alignParentStart="true"
        android:layout_marginStart="292dp"
        android:layout_marginBottom="-48dp"
        android:fontFamily="@font/aclonica"
        android:text="TextView"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/repIncorrect"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignEnd="@+id/textView8"
        android:layout_alignBottom="@+id/repCorrect"
        android:layout_marginEnd="-135dp"
        android:layout_marginBottom="-54dp"
        android:fontFamily="@font/aclonica"
        android:text="TextView"
        android:textStyle="bold" />

    <Button
        android:id="@+id/replay"
        android:layout_height="59dp"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="143dp"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="-92dp"
        android:gravity="center"
        android:text="Replay"
        android:textColor="#080908"
        android:textColorHint="#1A1C1A"
        app:strokeColor="#7C4545" />

</RelativeLayout>